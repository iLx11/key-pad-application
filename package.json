{
  "name": "multi-pad",
  "version": "0.0.1",
  "private": true,
  "main": "appDir/main/main.js",
  "author": "iLx1",
  "description": "description",
  "scripts": {
    "start": "vite && electron .",
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "electron:build": "rimraf dist && vite build && electron-builder"
  },
  "dependencies": {
    "color": "^4.2.3",
    "detect-libc": "^2.0.2",
    "electron-store": "^8.1.0",
    "fs-extra": "^11.1.0",
    "node-gyp-build": "^4.8.0",
    "optional": "^0.1.4",
    "pinia": "^2.1.6",
    "pngparse": "^2.0.1",
    "prebuild-install": "^7.1.2",
    "serialport": "^12.0.0",
    "semver": "^7.5.4",
    "sharp": "0.32.6",
    "tui-image-editor": "^3.15.3",
    "color-convert": "^2.0.1",
    "color-string": "^1.9.0",
    "color-name": "~1.1.4",
    "simple-swizzle": "^0.2.2",
    "is-arrayish": "^0.3.1",
    "graceful-fs": "^4.2.0",
    "jsonfile": "^6.0.1",
    "universalify": "^2.0.0"
  },
  "devDependencies": {
    "@serialport/binding-mock": "10.2.2",
    "@serialport/bindings-cpp": "12.0.1",
    "@serialport/bindings-interface": "1.2.2",
    "@serialport/parser-byte-length": "12.0.0",
    "@serialport/parser-cctalk": "12.0.0",
    "@serialport/parser-delimiter": "12.0.0",
    "@serialport/parser-inter-byte-timeout": "12.0.0",
    "@serialport/parser-packet-length": "12.0.0",
    "@serialport/parser-readline": "12.0.0",
    "@serialport/parser-ready": "12.0.0",
    "@serialport/parser-regex": "12.0.0",
    "@serialport/parser-slip-encoder": "12.0.0",
    "@serialport/parser-spacepacket": "12.0.0",
    "@serialport/stream": "12.0.0",
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^18.17.17",
    "@vitejs/plugin-vue": "^4.3.4",
    "@vue/tsconfig": "^0.4.0",
    "debug": "4.3.4",
    "electron": "^26.3.0",
    "electron-builder": "22.10.0",
    "ms": "2.1.2",
    "node-sass": "^9.0.0",
    "npm-run-all2": "^6.0.6",
    "rimraf": "^5.0.5",
    "sass": "^1.69.0",
    "sass-loader": "^13.3.2",
    "typescript": "~5.2.0",
    "vite": "^4.4.9",
    "vite-plugin-electron": "^0.4.5",
    "vite-plugin-optimizer": "^1.4.2",
    "vue": "^3.3.4",
    "vue-router": "^4.2.5",
    "vue-tsc": "^1.8.11"
  },
  "build": {
    "appId": "com.xxx.MultiPad",
    "productName": "MultiPad",
    "copyright": "Copyright Â© 2023 iLx1",
    "directories": {
      "output": "dist_electron"
    },
    "win": {
      "icon": "./public/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "linux": {
      "icon": "./public/icon.ico",
      "target": "AppImage"
    },
    "mac": {
      "icon": "./public/icon.ico"
    },
    "files": [
      "./dist",
      "./electron",
      "./appDir"
    ],
    "asar": false,
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./public/icon.ico",
      "uninstallerIcon": "./public/icon.ico",
      "installerHeaderIcon": "./public/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
